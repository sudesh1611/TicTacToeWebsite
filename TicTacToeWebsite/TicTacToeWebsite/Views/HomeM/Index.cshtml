
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <br />
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row">
                <div class="col-lg-offset-3 col-lg-2 col-md-offset-3 col-md-2 col-xs-4" style="border-bottom:5px solid cornflowerblue;border-right:5px solid cornflowerblue;" onclick="clicked(0)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="zeroth" />
                </div>
                <div class="col-lg-2 col-md-2 col-xs-4" style="border-bottom:5px solid cornflowerblue;border-right:5px solid cornflowerblue;" onclick="clicked(1)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="first" />
                </div>
                <div class="col-lg-2 col-md-2 col-xs-4 " style="border-bottom:5px solid cornflowerblue;border-right:5px solid white;" onclick="clicked(2)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="second" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-3 col-lg-2 col-md-offset-3 col-md-2 col-xs-4" style="border-bottom:5px solid cornflowerblue;border-right:5px solid cornflowerblue;" onclick="clicked(3)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="third" />
                </div>
                <div class="col-lg-2 col-md-2 col-xs-4" style="border-right:5px solid cornflowerblue;border-bottom:5px solid cornflowerblue;" onclick="clicked(4)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="fourth" />
                </div>
                <div class="col-lg-2 col-md-2 col-xs-4" style="border-bottom:5px solid cornflowerblue;border-right:5px solid white;" onclick="clicked(5)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="fifth" />
                </div>
            </div>
            <div class="row ">
                <div class="col-lg-offset-3 col-lg-2 col-md-offset-3 col-md-2 col-xs-4 text-center" style="border-right:5px solid cornflowerblue;" onclick="clicked(6)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="sixth" />
                </div>
                <div class="col-lg-2 col-md-2 col-xs-4" style="border-right:5px solid cornflowerblue;" onclick="clicked(7)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="seventh" />
                </div>
                <div class="col-lg-2 col-md-2 col-xs-4" onclick="clicked(8)">
                    <img class="img-responsive center-block" src="~/images/Blank.jpg" id="eighth" />
                </div>
            </div>
            <br />
            <div class="row" id="HideUltimate">
                <div>
                    <div class="col-lg-12 col-md-12 col-xs-12 text-center">
                        <div class="progress" style="height:1.5em;">
                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                <strong>Loading Game Data. Just A Few Seconds...</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" id="HideRow">
                <div class="col-lg-2 col-md-2 col-xs-12 text-center">
                    <div>
                        <a class="btn btn-block" style="background-color:cornflowerblue;color:#FFFFFF;" id="turnButton"><strong>Loading...</strong></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 text-center">
                    <div>
                        <h5 style="color:cornflowerblue;"><strong>Player: </strong>@ViewData["MyName"]</h5>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-xs-12 text-center">
                    <div>
                        <h5 style="color:cornflowerblue;"><strong>Your Symbol: </strong>@ViewData["MySymbol"]</h5>
                    </div>
                </div>

                <div class="col-lg-3 col-md-3 col-xs-12 text-center">
                    <div>
                        <h5 style="color:cornflowerblue;"><strong>Opponent: </strong>@ViewData["OpponentName"]</h5>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 text-center col-xs-12">
                    <a class="btn btn-block" id="quitButton" style="color:cornflowerblue;" onclick="quitButtonClicked()"><strong>Quit</strong></a>
                </div>
            </div>
            <div hidden class="row" id="ShowRow">
                <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-12 text-center">
                    <form asp-controller="FirstPage" asp-action="Index" method="post" class="form-inline">
                        <div class="form-group ">
                            <input hidden class="form-control" type="hidden" name="PlayerName" value="@ViewData["MyName"]" id="hide1" />
                        </div>
                        <div class="form-group ">
                            <button type="submit" class="btn btn-lg btn-default" id="ShowButton" style="color:cornflowerblue;"><strong>Play Again</strong></button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12 text-center">
                    <a asp-controller="FirstPage" asp-action="Index" class="btn btn-lg btn-default" style="color:cornflowerblue;"><strong>Exit</strong></a>
                </div>
            </div>
        </div>
        <br />
        <h1 hidden id="MyName">@ViewData["MyName"]</h1>
        <h1 hidden id="MyID">@ViewData["MyID"]</h1>
        <h1 hidden id="MySymbol">@ViewData["MySymbol"]</h1>
        <h1 hidden id="Turn">@ViewData["Turn"]</h1>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
                        <h4 class="modal-title" id="myModalLabel" style="color:cornflowerblue;"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="myModalbodyText" style="color:cornflowerblue;"></p>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default" data-dismiss="modal" style="color:cornflowerblue;">Okay</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section scripts{
    <script src="~/js/Game.js"></script>
    <script type="text/javascript">
        function quitButtonClicked() {
            var myID = $('#MyID').text();
            $.ajax(
            {
                url: '/HomeM/PlayerQuit',
                type: 'POST',
                data: { 'id': myID },
                success: function (response) {
                    if (response == 'Deleted') {
                        location.href = "/Index";
                    }
                    else {
                        quitButtonClicked();
                    }
                },
                error: function (errorThrown) {
                    console.log(errorThrown);
                    ConnectionChanged();
                }
            });
        }
    </script>
}
